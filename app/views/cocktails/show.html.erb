<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-4 col-xs-4">
        <div class="card">
          <div id="cocktail-name">
            <h2> <%= @cocktail.name.capitalize %> </h2>
          </div>
          <div id="doseslist">
            <ul>
              <% @doses.each do |dose| %>
                <li><%= link_to (cocktail_dose_path(@cocktail.id, dose.id)),  method: 'delete' do %><i class='fa fa-times' ></i><%end %> <%= dose.ingredient.name.capitalize %>: <%= dose.description %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-4 col-xs-4">
        <%= render 'doses/form' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-4 col-xs-4">
        <div id="back">
          <%= link_to 'Back to cocktail list', cocktails_path, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
